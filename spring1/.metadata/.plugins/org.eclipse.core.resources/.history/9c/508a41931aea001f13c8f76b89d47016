spring.application.name=ProyectoFCT
spring.datasource.url=jdbc:mariadb://localhost:3306/nombreBBDD
spring.datasource.username=user
spring.datasource.password=pass
spring.datasource.driver-class-name=org.mariadb.jdbc.Driver

# Nos permite mostrar el SQL que se lanza en el log
spring.jpa.show-sql=true

# Nos permite especificar un dialecto SQL según la BBDD que usemos
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# Nos permite crear la BBDD si no existe
spring.jpa.hibernate.ddl-auto=créate